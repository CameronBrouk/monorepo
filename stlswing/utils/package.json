{
  "name": "@stlswing/utils",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "jest --watch",
    "start": "tsc --watch",
    "serve": "pm2 --name utils:dev start npm -- start",
    "stop": "pm2 stop Utils",
    "build": "tsc"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "my-toolchain": "^1.0.0",
    "date-fns": "~2.28.0",
    "jest-watch-typeahead": "~1.1.0"
  },
  "devDependencies": {
    "jest": "~28.1.1",
    "@types/jest": "~28.1.2",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "babel-jest": "~27.5.1",
    "babel-loader": "^8.2.3"
  },
  "peerDependencies": {
    "node-notifier": "~10.0.1",
    "webpack": "^2.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "notify": true,
    "notifyMode": "failure",
    "clearMocks": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.*\\.mock\\.tsx$",
      "/.*\\.mock\\.ts$"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-typescript"
        ]
      }
    }
  }
}
